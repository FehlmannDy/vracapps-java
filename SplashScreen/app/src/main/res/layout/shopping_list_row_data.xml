<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/gridviewData"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/IngredientName"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="35dp"
            android:text="Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/IngredientTotal"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="35dp"
            android:layout_toEndOf="@+id/IngredientName"
            android:text="Total"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/IngredientGrammes"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="35dp"
            android:layout_toEndOf="@+id/IngredientTotal"
            android:text="Grammes"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/menu_cercle" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>